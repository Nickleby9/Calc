<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hilay.edu.androidlec1.MainActivity">

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnDivide"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorActivatedHighlight"
        android:paddingRight="0dp"
        android:text="X"
        android:textSize="30sp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_alignLeft="@+id/btnDivide"
        android:layout_alignStart="@+id/btnDivide" />

    <Button
        android:id="@+id/btnOne"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnFour"
        android:layout_margin="1dp"
        android:layout_toStartOf="@+id/btnTwo"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorControlHighlight"
        android:text="1"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnFour"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_alignEnd="@+id/btnOne"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/btnOne"
        android:layout_below="@+id/btnSeven"
        android:layout_margin="1dp"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorControlHighlight"
        android:text="4"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnZero"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/btnOne"
        android:layout_alignParentLeft="true"
        android:layout_alignStart="@+id/btnOne"
        android:layout_below="@+id/btnOne"
        android:layout_margin="1dp"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_toLeftOf="@+id/btnPoint"
        android:width="200dp"
        android:height="100dp"
        android:background="?android:attr/colorControlHighlight"
        android:text="0"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnTwo"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btnFour"
        android:layout_margin="1dp"
        android:layout_toLeftOf="@+id/btnPoint"
        android:layout_toStartOf="@+id/btnPoint"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorControlHighlight"
        android:text="2"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnPoint"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btnTwo"
        android:layout_margin="1dp"
        android:layout_toLeftOf="@+id/btnMinus"
        android:layout_toStartOf="@+id/btnMinus"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorControlHighlight"
        android:text="."
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnThree"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btnFive"
        android:layout_margin="1dp"
        android:layout_toEndOf="@+id/btnZero"
        android:layout_toRightOf="@+id/btnZero"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorControlHighlight"
        android:text="3"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnEquals"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnPlus"
        android:layout_margin="1dp"
        android:layout_toEndOf="@+id/btnPoint"
        android:layout_toRightOf="@+id/btnPoint"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorActivatedHighlight"
        android:paddingRight="0dp"
        android:text="="
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnMinus"
        android:layout_margin="1dp"
        android:layout_toEndOf="@+id/btnPoint"
        android:layout_toRightOf="@+id/btnPoint"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorActivatedHighlight"
        android:paddingRight="0dp"
        android:text="+"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnFive"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btnNine"
        android:layout_margin="1dp"
        android:layout_toEndOf="@+id/btnOne"
        android:layout_toRightOf="@+id/btnOne"
        android:width="100dp"
        android:height="100dp"
        android:background="?attr/colorControlHighlight"
        android:text="5"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnSix"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:width="100dp"
        android:height="100dp"
        android:background="?attr/colorControlHighlight"
        android:text="6"
        android:textSize="30sp"
        android:layout_above="@+id/btnThree"
        android:layout_alignLeft="@+id/btnThree"
        android:layout_alignStart="@+id/btnThree"
        android:layout_toStartOf="@+id/btnMinus"
        android:layout_toLeftOf="@+id/btnMinus" />

    <Button
        android:id="@+id/btnSeven"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnClear"
        android:layout_toStartOf="@+id/btnFive"
        android:width="100dp"
        android:height="100dp"
        android:background="?attr/colorControlHighlight"
        android:text="7"
        android:textSize="30sp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_alignRight="@+id/btnFour"
        android:layout_alignEnd="@+id/btnFour" />

    <Button
        android:id="@+id/btnDivide"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvResult"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorActivatedHighlight"
        android:paddingRight="0dp"
        android:text="/"
        android:textSize="30sp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp" />

    <Button
        android:id="@+id/btnNine"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btnDivide"
        android:width="100dp"
        android:height="100dp"
        android:background="?attr/colorControlHighlight"
        android:text="9"
        android:textSize="30sp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_alignLeft="@+id/btnSix"
        android:layout_alignStart="@+id/btnSix"
        android:layout_toStartOf="@+id/btnMultiply"
        android:layout_toLeftOf="@+id/btnMultiply" />

    <Button
        android:id="@+id/btnPlusMinus"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_below="@+id/tvResult"
        android:width="100dp"
        android:height="100dp"
        android:background="?attr/colorButtonNormal"
        android:text="+/-"
        android:textSize="30sp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_alignLeft="@+id/btnFive"
        android:layout_alignStart="@+id/btnFive"
        android:layout_alignRight="@+id/btnEight"
        android:layout_alignEnd="@+id/btnEight" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvResult"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorButtonNormal"
        android:text="C"
        android:textSize="30sp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_toStartOf="@+id/btnPlusMinus"
        android:layout_alignRight="@+id/btnOne"
        android:layout_alignEnd="@+id/btnOne" />

    <Button
        android:id="@+id/btnEight"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_below="@+id/btnPlusMinus"
        android:layout_toStartOf="@+id/btnPercent"
        android:width="100dp"
        android:height="100dp"
        android:background="?attr/colorControlHighlight"
        android:text="8"
        android:textSize="30sp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_alignRight="@+id/btnFive"
        android:layout_alignEnd="@+id/btnFive" />

    <Button
        android:id="@+id/btnMinus"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_alignEnd="@+id/btnMultiply"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnMultiply"
        android:width="100dp"
        android:height="100dp"
        android:background="?android:attr/colorActivatedHighlight"
        android:paddingRight="0dp"
        android:text="-"
        android:textSize="30sp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_alignLeft="@+id/btnMultiply"
        android:layout_alignStart="@+id/btnMultiply" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="370dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:width="390dp"
        android:text="0"
        android:textAlignment="textStart"
        android:textSize="36sp" />

    <Button
        android:id="@+id/btnPercent"
        android:layout_width="95dp"
        android:layout_height="90dp"
        android:layout_below="@+id/tvResult"
        android:layout_toLeftOf="@+id/btnDivide"
        android:width="100dp"
        android:height="100dp"
        android:background="?attr/colorButtonNormal"
        android:text="%"
        android:textSize="30sp"
        android:layout_marginRight="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_alignLeft="@+id/btnNine"
        android:layout_alignStart="@+id/btnNine" />

</RelativeLayout>
